<manifest xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
          package="com.notxx.miui" android:versionCode="1" android:versionName="1.0">

    <application android:label="@string/decorator_miui_label" android:description="@string/decorator_miui_description"
                 android:allowBackup="false" android:directBootAware="true" tools:targetApi="n"
                 tools:ignore="GoogleAppIndexingWarning,MissingApplicationIcon">

        <service
            android:name=".MIUIDecorator"
            android:directBootAware="true"
            android:permission="com.oasisfeng.nevo.permission.BIND_DECORATOR_SERVICE"
            android:process="com.oasisfeng.nevo.decorators"
            android:label="@string/decorator_miui_label"
            android:description="@string/decorator_miui_description">
            <intent-filter android:priority="-5">
                <action android:name="com.oasisfeng.nevo.Decorator" />
            </intent-filter>
            <meta-data android:name="packages" android:value="com.xiaomi.xmsf" />
        </service>

    </application>

</manifest>
